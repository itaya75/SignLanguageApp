<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" controllerName="sign.controller.MasterGrid"
	xmlns:html="http://www.w3.org/1999/xhtml" xmlns:l="sap.ui.layout">
	<Page title="{i18n>firstPageTitle}">
		<l:HorizontalLayout width="100%" height="100%">
			<l:content>
				<!--Button icon="img/rightArrow.png" class="button_right"></Button-->
				<l:Grid class="sapUiSmallMarginTop grid_center" content="{sign>/categories}">
					<ObjectListItem title="{sign>name}" icon="{sign>image}" type="Active" press="handleMasterGridItemPress"></ObjectListItem>
				</l:Grid>
				<!--Button icon="img/leftArrow.jpg" class="button_left"></Button-->
			</l:content>
		</l:HorizontalLayout>
	</Page>
</mvc:View>
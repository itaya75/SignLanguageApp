<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" controllerName="sign.controller.Category"
	xmlns:html="http://www.w3.org/1999/xhtml">
	<Page
		id="page"
		showNavButton="true"
		navButtonPress="handleNavButtonPress"
		showFooter="{device>/isNoPhone}" >
	    <subHeader>
			<Toolbar id="searchBar">
				<SearchField
					id="searchField"
					showRefreshButton="{device>/isNoTouch}"
					placeholder="{i18n>SEARCH}"
					search="handleSearch"
					tooltip="Search words"
					width="100%">
				</SearchField>
			</Toolbar>
		</subHeader>
		<headerContent>
		</headerContent>
		<footer>
			<Toolbar>
			</Toolbar>
		</footer>
		<content>
		    	<!-- This list shows the search results -->
			<List
				id="searchedWordsList"
				mode="{device>/listMode}"
				select="handleWordListSelect"
				noDataText="{i18n>NO_DATA}"
				items="{
					path : '/words',
					sorter : {
						path : 'name',
						descending : false
					}
				}">
				<items>
					<ObjectListItem
						type="{device>/listItemType}"
						icon="{image}"
						title="{name}"
						press="handleProductListItemPress"
						iconDensityAware="false" >
					</ObjectListItem>
				</items>
			</List>
			<!-- words -->
			<List
				id="wordsList"
				mode="{device>/listMode}"
				select="handleWordListSelect"
				noDataText="{i18n>NO_DATA}"
				busyIndicatorDelay="0"
				items="{
					path : '/words',
					sorter : {
						path : 'name',
						descending : false
					}
				}">
				<items>
					<ObjectListItem
						type="Active"
						icon="{image}"
						title="{name}"
						press="handleWordListSelect"
						iconDensityAware="false" >
					</ObjectListItem>
				</items>
			</List>
		</content>
	</Page>
</mvc:View>
			<!-- This list shows the product categories -->
			<List
				id="categoryList"
				headerText="{i18n>CATEGORIES}"
				mode="None"
				items="{
					path : '/Categories',
					sorter : {
						path : 'CategoryName',
						descending: false
					}
				}">
				<items>
					<StandardListItem
						title="{CategoryName}"
						type="Active"
						counter="{NumberOfWords}"
						press="handleCategoryListItemPress" >
						<customData>
							<core:CustomData
								key="id"
								value="{Category}" />
						</customData>
					</StandardListItem>
				</items>
			</List>

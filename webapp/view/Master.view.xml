<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" controllerName="sign.controller.Master"
	xmlns:html="http://www.w3.org/1999/xhtml">
	
			<Page id="firstPage" title="{i18n>firstPageTitle}">
				<subHeader>
					<Toolbar id="searchBar">
						<SearchField
							id="searchField"
							showRefreshButton="{device>/isNoTouch}"
							placeholder="{i18n>SEARCH}"
							search="handleSearch"
							tooltip="Search words"
							width="100%">
						</SearchField>
					</Toolbar>
				</subHeader>
				<footer>
					<Toolbar>
					</Toolbar>
				</footer>
				<content>
			<!-- This list shows the search results -->
			<List
				id="wordsList"
				mode="{device>/listMode}"
				select="handleWordListSelect"
				noDataText="{i18n>NO_DATA}"
				items="{
					path : '/words',
					sorter : {
						path : 'name',
						descending : false
					}
				}">
				<items>
					<ObjectListItem
						type="{device>/listItemType}"
						icon="{image}"
						title="{name}"
						press="handleProductListItemPress"
						iconDensityAware="false" >
					</ObjectListItem>
				</items>
			</List>
			<!-- This list shows the product categories -->
			<List
				id="categoryList"
				mode="None"
				items="{
					path : '/categories',
					sorter : {
						path : 'name',
						descending: false
					}
				}">
				<items>
					<StandardListItem
						title="{name}"
						type="Active"
						icon="{image}"
						counter="{NumberOfWords}"
						press="handleCategoryListItemPress" >
						<customData>
							<core:CustomData
								key="id"
								value="{Category}" />
						</customData>
					</StandardListItem>
				</items>
			</List>
		</content>
			</Page>
	
</mvc:View>
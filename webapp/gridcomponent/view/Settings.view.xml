<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" controllerName="sign.gridcomponent.controller.Settings"
	xmlns:html="http://www.w3.org/1999/xhtml">
	<Page title="{i18n>settingsTitle}" showNavButton="true" navButtonPress="handleNavButtonPress">
		<content>
			<List>
				<items>
					<InputListItem label="{i18n>layout}">
						<Select items="{/layout}" change="onChange">
							<core:Item key="{key}" text="{value}"/>
						</Select>
					</InputListItem>
					<InputListItem label="{i18n>categoryPerPage}">
						<Select items="{/categoriesNum}" enabled="{/enabled}" id="selectCatNum">
							<core:Item key="{key}" text="{key}"/>
						</Select>
					</InputListItem>
				</items>
			</List>
		</content>
	</Page>
</mvc:View>